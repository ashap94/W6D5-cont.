<% action = (cat.persisted? ? cat_url(cat) : cats_url) %>
<% method = (cat.persisted? ? :patch : :post) %>

<form action="<%= action %>" method="post">
  <input type = "hidden" name="_method" value="<%= method %>">

  <label for= "name">Name:</label>
    <input 
    type = "text" 
    name="cat[name]" 
    value="<%=@cat.name%>">
  
  <br>
  <label for= "birth_date">Birth_date:</label>
    <input 
    type = "date" 
    name="cat[birth_date]" 
    value="<%=@cat.birth_date%>">
  <br>

  <label for= "cat_color">Color:
    <select name="cat[color]" id="cat_color">
      <option selected= "selected">
      <%=@cat.color%>
      </option>
      <option>-----</option>
      <option value="White">White</option>
      <option value="Black">Black</option>
      <option value="Brown">Brown</option>
      <option value="Orange">Orange</option>
    </select>

  </label>
  <br>
  <label for= "sex">Sex:
    <% if @cat.sex == "M" %>
    <input type = "radio" name="cat[sex]" value="M" checked = "">M
    <input type = "radio" name="cat[sex]" value="F">F
    <% else %>
    <input type = "radio" name="cat[sex]" value="M">M
    <input type = "radio" name="cat[sex]" value="F" checked = "">F
    <% end %>
  </label>
  <br>
  
  <label for= "description">Description:
    <textarea id="description" name="cat[description]"><%=@cat.description%></textarea>
  </label>
  <br>
  <% submit_text = (cat.persisted? ? 'Update' : 'Create') %>
  <input type="submit" value='<%= submit_text %>'>
</form>